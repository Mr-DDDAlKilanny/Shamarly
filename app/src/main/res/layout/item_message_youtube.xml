<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_below="@id/videoTitle"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:paddingLeft="8dp"
            android:layout_width="wrap_content"
            android:id="@+id/msgTime"
            tools:text="27 April 2020"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_below="@id/videoLayout"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:gravity="right"
            android:id="@+id/videoTitle"
            tools:text="Salut les amis j'espere que vous aller bien, mois ca je cerhcuer comprendre"
            android:textColor="@android:color/black" />

        <FrameLayout
            android:id="@+id/videoLayout"
            android:layout_below="@id/msgTxt"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgThumb"
                android:scaleType="fitCenter"
                android:layout_width="160dp"
                android:layout_height="120dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                app:srcCompat="@drawable/baseline_play_circle_outline_48" />

        </FrameLayout>

        <TextView
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:gravity="right"
            android:id="@+id/msgTxt"
            tools:text="Salut les amis j'espere que vous aller bien, mois ca je cerhcuer comprendre"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>