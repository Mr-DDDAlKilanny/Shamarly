<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:elevation="5dp"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="right"
            android:text="محمد صديق المنشاوي - مجود"
            android:id="@+id/txtReciteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="المساحة المطلوبة: "
            android:id="@+id/txtSize"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txtReciteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="right"
            android:text="5.6 G.B."
            android:paddingRight="5dp"
            android:layout_toLeftOf="@id/txtSize"
            android:id="@+id/txtRequiredSize"
            android:layout_below="@id/txtReciteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="right"
            android:layoutDirection="rtl"
            style="?android:attr/buttonBarStyle"
            android:layout_below="@id/txtRequiredSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تحميل"
                android:id="@+id/btnDownload"
                style="?android:attr/buttonBarButtonStyle"
                android:theme="@style/PrimaryFlatButton" />
            <Button
                android:id="@+id/btnImport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="استيراد من ملف التحميل"
                style="?android:attr/buttonBarButtonStyle"
                android:theme="@style/PrimaryFlatButton" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>