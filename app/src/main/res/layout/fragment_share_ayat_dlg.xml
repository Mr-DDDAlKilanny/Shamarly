<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <kilanny.shamarlymushaf.views.QuranImageView
        android:layout_weight="0.9"
        android:id="@+id/shareQuranImageView"
        android:layout_width="fill_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="0.1"
        style="?android:buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:layout_weight="0.33"
            android:id="@+id/buttonShareImage"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:drawableStart="@android:drawable/ic_menu_share"
            android:drawableRight="@android:drawable/ic_menu_gallery"
            android:drawableEnd="@android:drawable/ic_menu_gallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:layout_weight="0.34"
            android:id="@+id/buttonShareText"
            android:drawableRight="@android:drawable/sym_action_chat"
            android:drawableEnd="@android:drawable/sym_action_chat"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:drawableStart="@android:drawable/ic_menu_share"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        <Button
            android:layout_weight="0.33"
            android:id="@+id/buttonShareCopy"
            android:drawableRight="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:drawableEnd="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>