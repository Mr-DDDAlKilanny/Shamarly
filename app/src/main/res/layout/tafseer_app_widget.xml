<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/layoutHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="آيَةٌ وَتَفْسِيرُهَا"
            android:textColor="#3F51B5"
            android:gravity="center"
            android:background="#FFFDE7"
            android:layout_width="match_parent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:shadowRadius="1"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowColor="#673AB7"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/btnShowAyah"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"
                android:scaleType="fitXY"
                android:background="@color/black_overlay"
                android:layout_width="36dp"
                android:layout_height="36dp" />
            <ImageButton
                android:id="@+id/btnReload"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/stat_notify_sync"
                android:scaleType="fitXY"
                android:background="@color/black_overlay"
                android:layout_width="36dp"
                android:layout_height="36dp" />
        </RelativeLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/txtSurahAyah"
        android:layout_below="@id/layoutHeader"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@color/black_overlay"
        android:text="سورة الحج: 78"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:clickable="false"
        android:id="@+id/widgetListTexts"
        android:layout_below="@id/txtSurahAyah"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>